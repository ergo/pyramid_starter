{% extends "testscaffold:templates/admin/layout.jinja2" %}
{% import 'testscaffold:templates/partials/common.jinja2' as common_widgets %}

{% block content %}
<div class="col-md-9">

    <div class="card">
        <h4 class="card-header">{% trans %}Browse users{% endtrans %}</h4>
        <div class="card-block">

            <p>
                <a href="{{request.route_url('admin_objects', object="users", verb='POST')}}" class="btn btn-info">
                    {% trans %}Create a new user{% endtrans %}
                </a>
            </p>

            <div class="text-center">
                {{common_widgets.render_paginator(user_paginator)}}
            </div>

            <table class="table">
            {{user_grid}}
            </table>
            <div class="text-center">
                {{common_widgets.render_paginator(user_paginator)}}
            </div>

        </div>
    </div>
</div>
{% endblock content %}
